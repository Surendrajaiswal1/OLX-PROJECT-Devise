<p style='color:red'> <%= flash[:add] %> </p>
<style>
.card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}
.button{
  margin-right: 24.5rem!important;
}
select{
height: 40px;
border-radius: 7px;
}
.abc{
  margin-left: 19.5rem!important;
}

</style>
<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Add Your Product For Sell</h3>
                <%= form_with model: @product, url: '/sell_products', method: :post do |form| %>
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <%= form.text_field :name,placeholder: "Product Name",id:"form3Example1m",class:"form-control form-control-lg" %>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                    <%= form.text_field :price,placeholder: "Price",id:"form3Example1m",class:"form-control form-control-lg" %>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <%= form.text_field :description,placeholder: "Description",id:"form3Example1m",class:"form-control form-control-lg" %>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <%= form.file_field :name,id:"form3Example1m",class:"form-control form-control-lg" %>
                    </div>
                  </div>
              </div>


                <div class="abc row">
                  <div class="col-md-6 mb-4">

                    <%= form.label :Select_category %><br>
                    <%= form.collection_select :category_id, Category.order(:category_name), :id, :category_name %> <br>

                  </div>
                </div>
                <div class="d-flex justify-content-end pt-3">
                  <%=form.submit "Create",class: "button btn btn-warning btn-lg ms-2"%>
                </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


